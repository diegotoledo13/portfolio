---
const { links } = Astro.props;
---

<section class="bg-white rounded-lg p-6 shadow-sm">
  <h3 class="text-2xl font-bold text-blue-600 mb-6 border-b-2 border-cyan-400 pb-2">
    Links
  </h3>
  <div class="space-y-3">
    {links.map((link, index) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-3 text-blue-600 hover:text-blue-800 transition-colors duration-200"
      >
        <span class="text-xl">{link.icon}</span>
        <span class="font-medium">{link.name}: {link.url}</span>
      </a>
    ))}
  </div>
</section>