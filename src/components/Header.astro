---
const { personalInfo } = Astro.props;
---

<header class="bg-gradient-to-r from-blue-500 to-cyan-500 text-white p-8">
  <div class="flex flex-col md:flex-row items-center gap-6">
    <img
      src={personalInfo.profileImage}
      alt={personalInfo.name}
      class="w-32 h-32 rounded-full border-4 border-white shadow-lg object-cover"
    />
    <div class="text-center md:text-left">
      <h1 class="text-4xl font-bold mb-2">{personalInfo.name}</h1>
      <h2 class="text-xl font-light mb-4 opacity-90">{personalInfo.title}</h2>
      <div class="flex flex-wrap justify-center md:justify-start gap-4 text-sm">
        <span class="flex items-center gap-2">
          <span class="text-lg">📧</span>
          {personalInfo.email}
        </span>
        <span class="flex items-center gap-2">
          <span class="text-lg">📱</span>
          {personalInfo.phone}
        </span>
        <span class="flex items-center gap-2">
          <span class="text-lg">📍</span>
          {personalInfo.location}
        </span>
      </div>
    </div>
  </div>
</header>