---
const { skills } = Astro.props;
---

<section class="bg-white rounded-lg p-6 shadow-sm">
  <h3 class="text-2xl font-bold text-blue-600 mb-6 border-b-2 border-cyan-400 pb-2">
    Habilidades Técnicas
  </h3>
  <div class="space-y-6">
    <div>
      <h4 class="text-lg font-semibold text-blue-700 mb-3">Frontend Development</h4>
      <div class="flex flex-wrap gap-2">
        {skills.frontend.map((skill) => (
          <span class="bg-blue-50 text-blue-700 px-3 py-1 rounded-full text-sm font-medium border border-blue-200">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <div>
      <h4 class="text-lg font-semibold text-blue-700 mb-3">CMS & SEO</h4>
      <div class="flex flex-wrap gap-2">
        {skills.cms.map((skill) => (
          <span class="bg-green-50 text-green-700 px-3 py-1 rounded-full text-sm font-medium border border-green-200">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <div>
      <h4 class="text-lg font-semibold text-blue-700 mb-3">Herramientas & Workflow</h4>
      <div class="flex flex-wrap gap-2">
        {skills.tools.map((skill) => (
          <span class="bg-purple-50 text-purple-700 px-3 py-1 rounded-full text-sm font-medium border border-purple-200">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <div>
      <h4 class="text-lg font-semibold text-blue-700 mb-3">Diseño & Otros</h4>
      <div class="flex flex-wrap gap-2">
        {skills.other.map((skill) => (
          <span class="bg-orange-50 text-orange-700 px-3 py-1 rounded-full text-sm font-medium border border-orange-200">
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>