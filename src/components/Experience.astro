---
const { experience } = Astro.props;
---

<section class="bg-white rounded-lg p-6 shadow-sm">
  <h3 class="text-2xl font-bold text-blue-600 mb-6 border-b-2 border-cyan-400 pb-2">
    Experiencia Laboral
  </h3>
  {experience.map((exp, index) => (
    <div class="mb-6 last:mb-0">
      <div class="mb-3">
        <h4 class="text-xl font-semibold text-blue-700 mb-1">{exp.title}</h4>
        <div class="text-gray-600 font-medium mb-1">{exp.company}</div>
        <div class="text-sm text-gray-500 italic">{exp.period}</div>
      </div>
      <ul class="list-disc list-inside text-gray-700 space-y-1 ml-4">
        {exp.description.map((item, idx) => (
          <li class="leading-relaxed">{item}</li>
        ))}
      </ul>
    </div>
  ))}
</section>