---
const { languages } = Astro.props;
---

<section class="bg-white rounded-lg p-6 shadow-sm">
  <h3 class="text-2xl font-bold text-blue-600 mb-6 border-b-2 border-cyan-400 pb-2">
    Idiomas
  </h3>
  <div class="space-y-3">
    {languages.map((lang, index) => (
      <div class="flex justify-between items-center">
        <span class="text-gray-800 font-medium">{lang.name}</span>
        <span class="text-blue-600 font-semibold">{lang.level}</span>
      </div>
    ))}
  </div>
</section>