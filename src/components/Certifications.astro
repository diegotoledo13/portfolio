---
const { certifications } = Astro.props;
---

<section class="bg-white rounded-lg p-6 shadow-sm">
  <h3 class="text-2xl font-bold text-blue-600 mb-6 border-b-2 border-cyan-400 pb-2">
    Certificaciones
  </h3>
  <div class="space-y-4">
    {certifications.map((cert, index) => (
      <div class="border-l-4 border-green-400 pl-4">
        <h4 class="text-lg font-semibold text-gray-800 mb-1">{cert.title}</h4>
        <div class="text-green-600 font-medium mb-1">{cert.platform}</div>
        <div class="text-sm text-gray-500">{cert.date}</div>
      </div>
    ))}
  </div>
</section>